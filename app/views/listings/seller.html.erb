<div class="container">
<h1>Listing listings</h1>

    <% @listings.each do |listing| %>
<%= listing.user.name %>
<%= listing.user.email %>
<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

      <tr>
        <td><%= link_to image_tag(listing.image.url(:thumb)), listing %></td>
        <td><%= listing.name %></td>
        <td><%= listing.user.name %></td>
        <td><%= listing.description %></td>
        <td><%= listing.price %></td>
        <td><%= link_to 'Show', listing %></td>
      <% if (user_signed_in?) && (current_user == listing.user) %>
          <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
          <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Listing', new_listing_path %>
</div>
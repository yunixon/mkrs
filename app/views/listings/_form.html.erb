<%= form_for @listing , :html => { :multipart => true }, :validate => true do |f| %>
<div class="container">
  <div class="listing-container">
    <div class="row">
      <div class="col-md-12">  
        <div class="dragndrop">
        <h3>Įtempkite nuotraukas čia</h3>
        <p>arba</p>

          <%= file_field_tag "images[]", type: :file, multiple: true %>


          <button type="button" class="btn btn-primary-op">Pasirinkite iš disko</button>
        </div>
      </div>
</div>
  <% if @listing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

      <ul>
      <% @listing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="row">
    <div class="col-md-12">

        <div class="listing-upload">

          <div class="form-group">
            <%= f.text_area :name, :rows => '1', :class => 'listing-name',
                            :placeholder => 'Rankdarbio pavadinimas' %>
          </div>
          
        <div class="row">
          <div class="col-xs-12 col-sm-5">
            <div class="form-group">
            <label for="Kategorija">Kategorija</label>
            <%= f.select :category_id, 
            options_for_select([*Category.all.map{ |c| [c.name, c.id] }]) , :prompt => 'Pasirinkite kategoriją' %>

            </div>
          </div>


          <div class="col-xs-12 col-sm-5">
            <div class="form-group">
            <label for="Kategorija">Rankdarbio būsena</label>
              <%= f.select :state, ['Paruoštas siuntimui', 'Gaminamas gavus užsakymą'],
                           :prompt => 'Pasirinkite būseną' %>
            </div>
          </div>

          <div class="col-xs-12 col-sm-2 ">
          <div class="form-group">
          <label for="Kategorija">Kaina</label>
              <div class="input-group">
                <%= f.text_field :price, :class => 'custom-form custom' %>
                <div class="input-group-addon">€</div>
              </div>
            </div>
        </div>
        </div>

        <div class="row">
          <div class="col-xs-12 col-sm-12 ">
            <div class="form-group divider">
              <label for="Aprašymas">Aprašymas</label>
              <%= f.text_area :description, :rows => '5', :class => 'custom-form' %>
            </div>
            </div>
        </div>
        <div class="row">
          <div class="col-xs-12 col-sm-12 ">
            <div class="form-group">
              <label for="Panaudotos medžiagos">Panaudotos Medžiagos</label>
              <%= f.text_field :materials, 'data-role'=>'tagsinput' %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-12 col-sm-6 ">
            <div class="form-group">
              <label for="Aprašymas">Matmenys</label>
              <%= f.text_field :dimentions, :class => 'custom-form', 
              :placeholder => 'Ilgis x Plotis x Aukštis' %>
            </div>
            </div>

          <div class="col-xs-12 col-sm-6">
            <div class="form-group">
            <label for="Aprašymas">Galimi panašūs rankdarbiai pagal užsakymą</label>
              <div class="onoffswitch">
          <input name="listing[exchangeable]" type="hidden" value="0">
          <input name="listing[exchangeable]" type="checkbox" value="1"  class="onoffswitch-checkbox" id="myonoffswitch">
              <label class="onoffswitch-label" for="myonoffswitch">
                  <span class="onoffswitch-inner"></span>
                  <span class="onoffswitch-switch"></span>
              </label>
              </div>
            </div>
          </div>
        </div>
            <%= f.submit 'Paskelbti', :class => 'btn btn-primary' %>
        </div>
    </div> 

</div>

</div>
</div>



<% end %>






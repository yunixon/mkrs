<!DOCTYPE html>
<html>
<head>
  <title>MkrsLt</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
<link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:200,300,400,600,700,400italic,600italic&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
<link href="https://fontastic.s3.amazonaws.com/tqiX9DLwWDK4vhPrXZqLEX/icons.css" rel="stylesheet">
<link href='http://fonts.googleapis.com/css?family=Roboto:400,300,500,700&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
  <%= csrf_meta_tags %>
</head>
<body>
	<%= render 'layouts/header' %>

	<% flash.each do |name, msg| %>
	    <% if msg.is_a?(String) %>
	      <div class="alert alert-success">
	      <div class="container">
	        <%= content_tag :div, msg, :id => "flash_#{name}" %>
	      </div>
	      </div>
	    <% end %>
	  <% end %>

  	<%= yield %>
</body>
</html>

<div class="container small">


<%= form_for(resource, as: resource_name, url: registration_path(resource_name), 
html: { method: :put, :multipart => true }) do |f| %>

<h3>Profilio redagavimas</h3>
<div class="split"></div>
<div class="edit-profile-wrapper">
  <h4>Profilio nuotrauka</h4>
    <div class="row">
      <div class="col-xs-2">
        <%= image_tag(current_user.profile_image , :class => 'user-avatar') %>
      </div>
      <div class="col-xs-10">
        <%= f.file_field :profile_image, :class => 'user-image'  %>
      </div>
    </div>
   <h4>Vartotojo informacija</h4>
    <div class="row">
      <div class="col-sm-12 ">
      <div class="form-group">
        <label for="">Profilio vardas</label>
       <%= f.text_field :user_name, :class => 'custom-form', :validate => true%>
      </div>
      </div>
    </div>

    <div class="row">
    <div class="col-xs-12 col-sm-6">
    <div class="form-group">
      <label for="">Vardas</label>
      <%= f.text_field :first_name, :class => 'custom-form' %>
    </div>
    </div>
    <div class="col-xs-12 col-sm-6">
    <div class="form-group">
      <label for="">Pavardė</label>
      <%= f.text_field :last_name, :class => 'custom-form' %>
    </div>
    </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <label for="">El. paštas</label>
          <%= f.email_field :email, :class => 'custom-form' %>
        </div>
      </div>
    </div>

      <div class="row">
      <div class="col-md-12">
      <div class="form-group">
        <label for="">Miestas</label>
        <%= f.text_field :location, :class => 'custom-form' %>
      </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-12 ">
      <div class="form-group">
        <label for="">Bio</label>
        <%= f.text_area :bio, :rows => '5', :class => 'custom-form'%>
      </div>
      </div>
    </div>

      <div class="split"></div>
      <%= f.submit "Išsaugoti",:class => 'btn btn-primary'  %>

 <!--     <%= button_to "Sunaikinti paskyrą", registration_path(resource_name), 
                                        data: { confirm: "Are you sure?" }, 
                                        method: :delete, :class => 'btn btn-primary-op small red'%> -->

    </div>

    <% end %>
    </div>


 

</div>
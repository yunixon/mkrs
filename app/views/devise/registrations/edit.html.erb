<div class="container small">
<h3 class="divider">Profilio redagavimas</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put,      :multipart => true }) do |f| %>
  <%= devise_error_messages! %>



<div class="edit-profile-wrapper">
  <h4>Profilio nuotrauka</h4>
    <div class="row">
      <div class="col-xs-2">
        <%= image_tag(current_user.profile_image , :class => 'user-avatar') %>
      </div>
      <div class="col-xs-10">
        <%= f.file_field :profile_image , :onchange => "readURL(this)", :class => 'user-image'  %>
      </div>
    </div>
   <h4>Vartotojo informacija</h4>
    <div class="row">
      <div class="col-sm-12 ">
      <div class="form-group">
        <label for="exampleInputEmail1">Profilio vardas</label>
       <%= f.text_field :name, :class => 'custom-form'%>
        <p class="help-block">Your username gives you a personal site URL so you can share your art or collections.</p>
      </div>
      </div>
    </div>

    <div class="row">
    <div class="col-xs-12 col-sm-6">
    <div class="form-group">
      <label for="exampleInputEmail1">Vardas</label>
      <%= f.text_field :first_name, :class => 'custom-form' %>
    </div>
    </div>
    <div class="col-xs-12 col-sm-6">
    <div class="form-group">
      <label for="exampleInputEmail1">Pavardė</label>
      <%= f.text_field :last_name, :class => 'custom-form' %>
    </div>
    </div>
    </div>

    <div class="row">
      <div class="col-xs-12 col-sm-6">
      <div class="form-group">
        <label for="exampleInputEmail1">El. paštas</label>
        <%= f.email_field :email, :class => 'custom-form' %>
      </div>
      </div>
      <div class="col-xs-12 col-sm-6">
      <div class="form-group">
        <label for="exampleInputEmail1">Miestas</label>
        <%= f.text_field :location, :class => 'custom-form' %>
      </div>
      </div>
    </div>

    <div class="row end">
      <div class="col-sm-12 ">
      <div class="form-group">
        <label for="exampleInputEmail1">Bio</label>
        <%= f.text_area :bio, :rows => '5', :class => 'custom-form'%>
      </div>
      </div>
    </div>


      <%= f.submit "Išsaugoti",:class => 'btn btn-primary right'  %>

 <!--     <%= button_to "Sunaikinti paskyrą", registration_path(resource_name), 
                                        data: { confirm: "Are you sure?" }, 
                                        method: :delete, :class => 'btn btn-primary-op small red'%> -->

    </div>

    <% end %>
    </div>


 

</div>
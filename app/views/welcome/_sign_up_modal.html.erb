
<div class="modal fade" id="sign_up" tabindex="-1" 
						role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Sveiki atvykę!</h4>
      </div>
      <div class="modal-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  	<%- resource_class.omniauth_providers.each do |provider| %>
    	<%= link_to "<span style='font-weight:300'>Registruotis su</span> Facebook".html_safe,
    			omniauth_authorize_path(resource_name, provider), 
    			:class => 'btn btn-primary facebook' %>
  	<% end -%>
  	<div class="separator"><p>arba</p></div>

  	<div class="form-group label-prefix">
  	<p class="label-prefix">www.makers.lt/ </p>
  	<%= f.text_field :name, autofocus: true, 
    				  :class => 'custom-form label-prefix', :placeholder => 'vartotojo_vardas' %>
			<p class="help-block">Your username gives you a personal site URL so you can share your art or collections.</p>
    </div>

    <div class="form-group">
	  <%= f.email_field :email, 
    				  :class => 'custom-form', :placeholder => 'El. paštas' %>
	  </div>

    <div class="form-group">
    <% if @validatable %><i>(Privaloma ne mažiau kaip <%= @minimum_password_length %> simboliai.)</i><% end %>
    <%= f.password_field :password, autocomplete: "off", 
    				  					 :class => 'custom-form password', :placeholder => 'Slaptažodis' %>
    </div>

  	<div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "off", 
    				  					 :class => 'custom-form password repeat', :placeholder => 'Pakartokite slaptažodį.' %>
    </div>

  	<div><%= f.submit "Registruotis", :class => 'btn btn-primary' %></div>
		<% end %>

      </div>
      <div class="modal-footer">
		  <p>Jau turite paskyrą?</p><%= link_to " Prisijunkite!", "#login", "data-toggle" => "modal" %>

		  <br />
      </div>
    </div>
  </div>
</div>